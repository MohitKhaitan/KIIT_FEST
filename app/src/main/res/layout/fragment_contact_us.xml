<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <fragment
        android:id="@+id/maps_id"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentTop="true"
        android:layout_weight="0.5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="vertical">


        <TextView
            android:id="@+id/email_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/maps_id"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="\nhelpdesk@kiitfest.org\n"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="italic"
            android:autoLink="email"/>

        <TextView
            android:id="@+id/phn_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/email_detail"
            android:layout_marginTop="10dp"
            android:autoLink="phone"
            android:gravity="center"
            android:text="\n+91-9778030494\n"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="italic" />

    </LinearLayout>


</LinearLayout>






















