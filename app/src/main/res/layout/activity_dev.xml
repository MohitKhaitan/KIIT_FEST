<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/detail_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/colorPrimary"
            android:padding="10dp">

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:text="Copyright Â© KIIT FEST 2016\nAll rights reserved.\nDeveloped by: KIIT FEST App Team"
                android:textColor="#FFFFFF"
                android:textSize="15dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/develpr_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/detail_layout"
            android:layout_margin="10dp"
            android:background="@color/colorPrimary"
            android:padding="10dp">

            <TextView
                android:id="@+id/develper_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:text="Developers"
                android:textColor="#FFFFFF"
                android:textSize="25dp" />

            <LinearLayout
                android:id="@+id/dev_linear_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/develper_tv"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:text="\nMOHIT KHAITAN"
                    android:textColor="#FFFFFF"
                    android:textSize="17dp"
                    android:id="@+id/mohit"
                    android:autoLink="web"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:text="\nNIKHIL PRAHLADKA"
                    android:textColor="#FFFFFF"
                    android:textSize="17dp"
                    android:id="@+id/nikhil"
                    android:autoLink="web"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:text="\nKUNDAN JAIN\n"
                    android:textColor="#FFFFFF"
                    android:textSize="17dp"
                    android:id="@+id/kundan"
                    android:autoLink="web"/>
            </LinearLayout>

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginLeft="40dp"
                android:src="@drawable/dev"
                android:id="@+id/img_id"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="10dp"
            android:text="*Connect with the Devs. Click there name!"
            android:layout_below="@id/develpr_layout"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"/>

    </RelativeLayout>
</ScrollView>